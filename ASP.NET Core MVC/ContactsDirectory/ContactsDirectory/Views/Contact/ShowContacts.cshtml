@model List<ContactsDirectory.Models.ContactInfo>

<html>
<head>
    <meta charset="utf-8" />
    <title>Contact List</title>

    <environment include="Development" exclude="Production">
        <link href="/lib/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    </environment>
    <environment include="Production" exclude="Development">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/css/bootstrap.min.css" rel="stylesheet"
              integrity="sha384-4Q6Gf2aSP4eDXB8Miphtr37CMZZQ5oXLH2yaXMJ2w8e2ZtHTl7GptT4jmndRuHDT" crossorigin="anonymous" />
    </environment>
</head>
<body>
    <div class="container mt-4">
        <h3 class="mb-4">Contact List</h3>

        <a class="btn btn-primary mb-3" asp-action="AddContact">Add New Contact</a>

        <table class="table table-bordered table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>Contact ID</th>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Company</th>
                    <th>Email</th>
                    <th>Mobile</th>
                    <th>Designation</th>
                    <th>Details</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var contact in Model)
                {
                    <tr>
                        <td>@contact.ContactId</td>
                        <td>@contact.FirstName</td>
                        <td>@contact.LastName</td>
                        <td>@contact.CompanyName</td>
                        <td>@contact.EmailId</td>
                        <td>@contact.MobileNo</td>
                        <td>@contact.Designation</td>
                        <td>
                            <a class="btn btn-info btn-sm" asp-action="GetContactById" asp-route-id="@contact.ContactId">ViewById</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <a class="btn btn-secondary mt-3" asp-route="ShowContacts">Show Contacts</a>
    </div>
</body>
</html>
