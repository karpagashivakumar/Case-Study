@model ContactsDirectory.Models.ContactInfo

<html>
<head>
    <title>Add New Contact</title>
    <environment include="Development" exclude="Production">
        <link href="/lib/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    </environment>
    <environment include="Production" exclude="Development">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/css/bootstrap.min.css" rel="stylesheet"
              integrity="sha384-4Q6Gf2aSP4eDXB8Miphtr37CMZZQ5oXLH2yaXMJ2w8e2ZtHTl7GptT4jmndRuHDT" crossorigin="anonymous" />
    </environment>
</head>
<body>
    <div class="container">
        <a class="btn btn-secondary" asp-route="ShowContacts">Show All Contacts</a>
    <h3>Add New Contact</h3>

    <form asp-route="SaveContact" method="post">
        <div>
            <label asp-for="FirstName">First Name:</label>
            <input asp-for="FirstName" placeholder="Enter First Name" />
        </div>
        <div>
            <label class="form-label" asp-for="LastName">Last Name:</label>
            <input class="form-control" asp-for="LastName" placeholder="Enter Last Name" />
        </div>
        <div>
            <label class="form-label" asp-for="CompanyName">Company:</label>
            <input class="form-control" asp-for="CompanyName" placeholder="Enter Company Name" />
        </div>
        <div>
            <label class="form-label" asp-for="EmailId">Email:</label>
            <input class="form-control" asp-for="EmailId" placeholder="Enter Email ID" />
        </div>
        <div>
            <label class="form-label" asp-for="MobileNo">Mobile No:</label>
            <input class="form-control" asp-for="MobileNo" placeholder="Enter Mobile Number" />
        </div>
        <div>
            <label class="form-label" asp-for="Designation">Designation:</label>
                <div>
                    <select class="form-control" asp-for="Designation" asp-items="@ViewBag.Designations">
                        <option selected value="">--Select--</option>
                    </select>
                </div>
        </div>
        <div>
            <input class="btn btn-success" type="submit" value="Save Contact" />
        </div>
    </form>

    <br />
    </div>
</body>
</html>
